{
    "path": "./results",
    "comment": "``` Make dict of hyperparameters for ease of use.",
    "device": "cpu",
    "model":{
        "model_name": "model",
        "weight_init_dist": "xavier_uniform",
        "activation": "hard-sigmoid",
        "layers": [3,1],
        "output_layer": 1
    },
    "gradient_propagation":{
        "name": "equilibrium_propagation",
        "nudging": 0.2,
        "variant": "centered",
        "use_alternative_formula": false
    },
    "cost_function":{
        "name": "squared_error",
        "output_layer": 1
    },

    "updater":{
        "name": "fixed_point",
        "training_order": "synchronous",
        "training_iterations": 20,
        "inference_order": "synchronous",
        "inference_iterations": 50
    },
    "optimizer": {
        "optimizer_name": "adam",
        "learning_rates_weights": 0.1,
        "learning_rates_bias": 0.11,
        "weight_decay": 0.01,
        "momentum": 0.5
    },
    "training": {
        "num_epochs": 10,
        "checkpoint_interval": 5,
        "batch_size": 1,
        "tensorboard": true,
        "save_model": true,
        "log": true,
        "wandb": false
    }
} 
